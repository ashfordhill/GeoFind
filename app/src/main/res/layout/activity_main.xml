<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scheme_yellow"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/titlescreen"
        android:fontFamily="@font/spicy_rice"
        android:gravity="center"
        android:text="Get   Good
  Geography"
        android:textAlignment="center"
        android:textColor="@color/scheme_green"

        android:textSize="50dp" />

    <Button
        android:id="@+id/newgame"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="New  Game"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/fred"
        android:textSize="40dp"
        android:textColor="@drawable/button_text_selector"
        android:background="@drawable/button_selector"
        android:onClick="openGameOptions"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fred"
        android:textSize="40dp"
        android:textColor="@drawable/button_text_selector"
        android:background="@drawable/button_selector"
        android:text="Settings"
        android:layout_weight="1"/>


</LinearLayout>